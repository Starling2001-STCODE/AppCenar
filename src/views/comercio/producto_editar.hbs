<div class="d-flex justify-content-between align-items-center mb-3">
  <button
    class="btn btn-outline-primary d-inline-flex align-items-center"
    type="button"
    data-bs-toggle="offcanvas"
    data-bs-target="#{{sidebarOffcanvasId}}"
    aria-controls="{{sidebarOffcanvasId}}"
  >
    <i class="bi bi-list me-2"></i>
    Menú
  </button>

  <div class="text-end">
    <div class="fw-semibold">
      {{comercioNombre}}
    </div>
    <div class="small text-muted">
      Comercio
    </div>
  </div>
</div>

<div
  class="offcanvas offcanvas-start"
  tabindex="-1"
  id="{{sidebarOffcanvasId}}"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">
      {{sidebar.title}}
    </h5>
    <button class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body">
    {{> sidebar sidebar}}
  </div>
</div>

<div class="mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h5 mb-0">
      Editar producto
    </h1>

    <a href="/comercio/productos" class="btn btn-link btn-sm">
      ← Volver a productos
    </a>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-4">
      <div class="card h-100">
        <div class="card-body text-center">
          <h2 class="h6 mb-3">
            Vista previa
          </h2>
          <div class="d-flex justify-content-center mb-3">
            <div
              class="bg-light border d-flex align-items-center justify-content-center"
              style="width: 140px; height: 140px; border-radius: 0.5rem; overflow: hidden;"
            >
              {{#if formData.imagen}}
                <img
                  src="{{formData.imagen}}"
                  alt="{{formData.nombre}}"
                  style="width: 100%; height: 100%; object-fit: cover;"
                />
              {{else}}
                <i class="bi bi-image" style="font-size: 3rem;"></i>
              {{/if}}
            </div>
          </div>
          <p class="small text-muted mb-0">
            La imagen se mostrará en el catálogo del cliente.
          </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <div class="card">
        <div class="card-body">
          <form method="POST" action="/comercio/productos/{{productId}}/editar">
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre</label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                class="form-control {{#if errors.nombre}}is-invalid{{/if}}"
                value="{{formData.nombre}}"
              />
              {{#if errors.nombre}}
                <div class="invalid-feedback">
                  {{errors.nombre.msg}}
                </div>
              {{/if}}
            </div>

            <div class="mb-3">
              <label for="descripcion" class="form-label">Descripción</label>
              <textarea
                id="descripcion"
                name="descripcion"
                class="form-control {{#if errors.descripcion}}is-invalid{{/if}}"
                rows="3"
              >{{formData.descripcion}}</textarea>
              {{#if errors.descripcion}}
                <div class="invalid-feedback">
                  {{errors.descripcion.msg}}
                </div>
              {{/if}}
            </div>

            <div class="row">
              <div class="col-12 col-md-6 mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input
                  type="number"
                  step="0.01"
                  min="0"
                  id="precio"
                  name="precio"
                  class="form-control {{#if errors.precio}}is-invalid{{/if}}"
                  value="{{formData.precio}}"
                />
                {{#if errors.precio}}
                  <div class="invalid-feedback">
                    {{errors.precio.msg}}
                  </div>
                {{/if}}
              </div>
              <div class="col-12 col-md-6 mb-3">
                <label for="categoriaId" class="form-label">Categoría</label>
                <select
                  id="categoriaId"
                  name="categoriaId"
                  class="form-select {{#if errors.categoriaId}}is-invalid{{/if}}"
                >
                  <option value="">Selecciona una categoría</option>
                  {{#each categories}}
                    <option
                      value="{{this.id}}"
                      {{#if this.selected}}selected{{/if}}
                    >
                      {{this.nombre}}
                    </option>
                  {{/each}}
                </select>
                {{#if errors.categoriaId}}
                  <div class="invalid-feedback">
                    {{errors.categoriaId.msg}}
                  </div>
                {{/if}}
              </div>
            </div>

            <div class="mb-3">
              <label for="imagen" class="form-label">Foto (URL opcional)</label>
              <input
                type="text"
                id="imagen"
                name="imagen"
                class="form-control {{#if errors.imagen}}is-invalid{{/if}}"
                value="{{formData.imagen}}"
                placeholder="/uploads/products/archivo.png o una URL"
              />
              {{#if errors.imagen}}
                <div class="invalid-feedback">
                  {{errors.imagen.msg}}
                </div>
              {{/if}}
            </div>

            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">
                Guardar cambios
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
