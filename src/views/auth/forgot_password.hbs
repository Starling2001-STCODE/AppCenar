<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm mt-4">
      <div class="card-body">
        <h1 class="h4 mb-3 text-center">Restablecer contraseña</h1>

        {{#if successMessage}}
          <div class="alert alert-success">
            {{successMessage}}
          </div>
        {{/if}}

        {{#if errors}}
          <div class="alert alert-danger">
            <ul class="mb-0">
              {{#if errors.identity}}
                <li>{{errors.identity.msg}}</li>
              {{/if}}
            </ul>
          </div>
        {{/if}}

        <form action="/password/forgot" method="post" novalidate>
          <div class="mb-3">
            <label for="identity" class="form-label">
              Usuario o correo
            </label>
            <input
              type="text"
              class="form-control {{#if errors.identity}}is-invalid{{/if}}"
              id="identity"
              name="identity"
              value="{{old.identity}}"
              placeholder="tu usuario o correo"
            />
          </div>

          <div class="d-grid gap-2 mb-3">
            <button type="submit" class="btn btn-primary">
              Enviar enlace de restablecimiento
            </button>
          </div>

          <div class="text-center">
            <p>Volver al <a href="/login">Inicio de sesión</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
