<div class="d-flex justify-content-between align-items-center mb-3">
  <button
    class="btn btn-outline-primary d-inline-flex align-items-center"
    type="button"
    data-bs-toggle="offcanvas"
    data-bs-target="#{{sidebarOffcanvasId}}"
    aria-controls="{{sidebarOffcanvasId}}"
  >
    <i class="bi bi-list me-2"></i>
    Men√∫
  </button>

  {{#if currentUser}}
    <div class="text-end">
      <div class="fw-semibold">
        {{currentUser.nombre}}
      </div>
      <div class="small text-muted">
        Delivery
      </div>
    </div>
  {{/if}}
</div>

<div
  class="offcanvas offcanvas-start"
  tabindex="-1"
  id="{{sidebarOffcanvasId}}"
  aria-labelledby="{{sidebarOffcanvasId}}Label"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="{{sidebarOffcanvasId}}Label">
      {{sidebar.title}}
    </h5>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    {{> sidebar sidebar}}
  </div>
</div>

<div class="mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1 class="h5 mb-1">
        Mis pedidos asignados
      </h1>
      <p class="text-muted small mb-0">
        Listado de pedidos donde eres el delivery asignado.
      </p>
    </div>
  </div>

  {{#if hasPedidos}}
    <div class="table-responsive">
      <table class="table align-middle">
        <thead>
          <tr>
            <th>Comercio</th>
            <th>Estado</th>
            <th class="text-end">Total</th>
            <th class="text-center">Productos</th>
            <th>Fecha/Hora</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each pedidos}}
            <tr>
              <td>
                <div class="d-flex align-items-center gap-2">
                  {{#if this.comercioLogo}}
                    <img
                      src="{{this.comercioLogo}}"
                      alt="{{this.comercioNombre}}"
                      style="width: 32px; height: 32px; border-radius: 50%; object-fit: cover;"
                    />
                  {{else}}
                    <div
                      class="bg-light border d-flex align-items-center justify-content-center"
                      style="width: 32px; height: 32px; border-radius: 50%;"
                    >
                      <i class="bi bi-shop"></i>
                    </div>
                  {{/if}}
                  <div>
                    <div class="fw-semibold">
                      {{this.comercioNombre}}
                    </div>
                  </div>
                </div>
              </td>
              <td>
                {{#ifEquals this.estado "pendiente"}}
                  <span class="badge bg-warning text-dark">Pendiente</span>
                {{else}}
                  {{#ifEquals this.estado "proceso"}}
                    <span class="badge bg-info text-dark">En proceso</span>
                  {{else}}
                    {{#ifEquals this.estado "completado"}}
                      <span class="badge bg-success">Completado</span>
                    {{else}}
                      <span class="badge bg-secondary">{{this.estado}}</span>
                    {{/ifEquals}}
                  {{/ifEquals}}
                {{/ifEquals}}
              </td>
              <td class="text-end">
                RD$ {{this.totalFormatted}}
              </td>
              <td class="text-center">
                {{this.cantidadProductos}}
              </td>
              <td>
                <span class="small text-muted">
                  {{this.creadoEn}}
                </span>
              </td>
              <td class="text-end">
                <a href="/delivery/pedidos/{{this.id}}" class="btn btn-sm btn-outline-primary">
                    Ver detalle
                </a>
                </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class="text-muted">
      No tienes pedidos asignados por el momento.
    </p>
  {{/if}}
</div>
